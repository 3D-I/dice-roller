{
    "name": "ethtezahl/dice-roller",
    "type": "library",
    "description": "RPG rolling dice simulation",
    "keywords": ["dice", "roll", "rpg"],
    "homepage": "https://github.com/Ethtezahl/dice-roller",
    "license": "MIT",
    "authors": [
        {
            "name": "Bertrand Andres",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=7.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.0",
        "phpunit/phpunit": "^6.2"
    },
    "autoload": {
        "psr-4": {
            "Ethtezahl\\DiceRoller\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Ethtezahl\\DiceRoller\\Test\\": "test"
        },
        "files": ["src/functions_include.php"]
    },
    "scripts": {
        "test": "phpunit --coverage-text; php-cs-fixer fix -v --diff --dry-run --allow-risky=yes;",
        "phpunit": "phpunit --coverage-text",
        "phpcs": "php-cs-fixer fix -v --diff --dry-run --allow-risky=yes;"
    },
    "bin": [
        "bin/roll"
    ],
    "extra": {
        "branch-alias": {
            "dev-master": "1.x-dev"
        }
    }
}
